.header
	margin-top 5.31em

	&__logo-img
		display none

		+sm-block()
			display block

	&__sm-logo-img
		display block

		+sm-block()
			display none


	&__content
		display flex
		justify-content space-between
		padding 1.8em 2.6em
		background-color #fff
		border-bottom: 1px solid #EAEAEA
		border-top-left-radius: 1.25em
		border-top-right-radius: 1.25em

		+sm-block()
			padding 2.75em 3.31em
	
	&__content-left
		display flex
		align-items center

.content-left-img
	margin-left 1.9em

.content-left-img:first-child
	margin-left 0